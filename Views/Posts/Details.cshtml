@using Microsoft.AspNetCore.Identity
@using TheBlogApplication.Enums
@using TheBlogApplication.Services
@using Newtonsoft.Json

@model TheBlogApplication.Models.Post

@inject UserManager<BlogUser> userManager
@inject IImageService imageService

@{
    ViewData["Title"] = "Details";
}

<!-- Post Content-->
<article class="mb-4">
  <div class="container px-4 px-lg-5">
     <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            @Html.Raw(Model.Content)
        </div>
     </div>
  </div>
</article>

<hr />
<article>
    <div class="row">
       <div class="col text-center font-weight-bold h3">
            Custom Post Tags
       </div>
     </div>
    <div class="row">
        <div class="col text-center">
            @foreach(var tag in Model.Tags)
            {
                //link to posts related to this particular tag
                <a class="btn btn-warning btn-sm btn-outline-dark" asp-action="TagIndex" asp-route-tag="@tag.Text.ToLower()">#@tag.Text</a>
            }
       </div>
    </div>
</article>
<hr />

<!-- Displaying Comments related to this Post -->
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="Create" asp-controller="Comments" method="post">
            @Html.Hidden("PostId", Model.Id)
            <div class="form-group">
                <label class="h2 custom-control-label font-weight-bold">Add Comment</label>
                <textarea name="body" class="form-control" rows="10"></textarea>
            </div>
            <div class="d-grid"><button class="btn btn-dark btn-lg">Submit</button></div>
        </form>
    }
    else
    {
        <div class="d-grid"><a class="btn btn-dark btn-sm" asp-area="Identity" asp-page="/Account/Login">
            Login to add comments
        </a></div>
    }
</div>

<!-- Display the image of the Comment's Author' -->
<hr />

<div class="d-grid"><span id="commentSection" class="btn btn-dark btn-sm">@Model.Comments.Count COMMENT(S)</span></div>

@{
    var counter = 0; 
}
@foreach (var comment in Model.Comments)
{
    <div class="media media-border p-0 mb-2 bg-light">
        <img class="mr-3 mt-3 rounded-circle" style="width:60px;" src="@imageService.DecodeImage(comment.BlogUser.ImageData, comment.BlogUser.ContentType)" />
        <div class="media-body">
            <h4>@comment.BlogUser.FullName</h4>
            <small><i> Posted on @comment.Created.ToString("dd MMM yyyy")</i></small>
            <p>@comment.Body</p>


            <!-- Allow logged-in user to edit comment, provided the comment  is NOT moderatd nor Deleted-->
            @*************************RENDER EDIT BUTTON*************************@
            @if (comment.Moderated is null && comment.Deleted is null && comment.BlogUserId == userManager.GetUserId(User))
            {
                <hr />
                <button data-bs-toggle="modal" data-bs-target="@($"#editModal{counter}") class="btn btn-sm btn-dark float-end font-weight-bold">EDIT</button>
            }

            @****************************RENDER THE MODERATE AND DELETE BUTTONS**************************@
            @if (User.IsInRole(BlogRole.Moderator.ToString()) && comment.Deleted is null)
            {
                <hr />
                <div class="row">
                    @******TO BE REVISITED*****@
                    @*<div class="col-2 d-grid">
                        <button class="btn btn-sm btn-dark font-weight-bold" data-bs-toggle="modal" data-bs-target="@($"#moderateModal{counter}")">MODERATE</button>
                    </div>*@
                    <div class="col-2">
                        <form asp-action="Delete" asp-controller="Comments" class="d-grid">
                            @Html.Hidden("Id", comment.Id)
                            @Html.Hidden("Slug", comment.Post.Slug)
                            <button class="btn btn-sm btn-dark font-weight-bold">DELETE</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Modals -->
    <div class="modal" id="#editModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Editing Comment...</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form asp-action="Edit" asp-controller="Comments">
                        @Html.Hidden("Id", comment.Id)
                        <div class="form-group">
                            <textarea name="Body" class="form-control" required>@comment.Body</textarea>
                        </div>
                        <button class="btn btn-sm btn-dark border-success font-weight-bold" type="submit">SUBMIT</button>
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-dark font-weight-bold" data-bs-dismiss="modal">CLOSE</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="@($"moderateModal{counter}")">
        <div class="modal-dialog">
            <div class="modal-content">

                <!--Modal Header-->
                <div class="modal-header">
                    <h4 class="modal-title">Moderating Comment...</h4>
                </div>

                <!--Modal body-->
                <div class="modal-body">
                    <form asp-action="Moderate" asp-controller="Comments">
                        @Html.Hidden("Id", comment.Id)
                        @Html.Hidden("Body", comment.Body)

                        <div class="form-group">
                            <label class="control-label">Original Comment</label>
                            <textarea disbaled class="form-control" style="resize:none">@comment.Body</textarea>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Moderated Comment</label>
                            <textarea required name="ModeratedBody" class="form-control">@comment.ModeratedBody</textarea>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Reason For Moderation</label>
                            <select class="form-control" asp-for="@comment.ModerationType" name="ModerationType" asp-items="Html.GetEnumSelectList<ModerationType>()"></select>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col d-grid">
                                    <button class="btn btn-sm btn-dark border-success font-weight-bold" type="submit">SUBMIT</button>
                                </div>
                                <div class="col d-grid">
                                    <button class="btn btn-sm btn-dark font-weight-bold" type="button" data-bs-dismiss="modal">CLOSE</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    counter++;
}